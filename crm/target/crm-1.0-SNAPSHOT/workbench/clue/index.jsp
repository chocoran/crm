<%@ page contentType="text/html;charset=UTF-8" language="java" pageEncoding="utf-8" %>
<!DOCTYPE html>
<html>
<head>
    <base href="${pageContext.request.contextPath}/">
    <meta charset="UTF-8">

    <link href="jquery/bootstrap_3.3.0/css/bootstrap.min.css" type="text/css" rel="stylesheet"/>
    <link href="jquery/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css" type="text/css"
          rel="stylesheet"/>

    <script type="text/javascript" src="jquery/jquery-1.11.1-min.js"></script>
    <script type="text/javascript" src="jquery/bootstrap_3.3.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="jquery/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"></script>
    <script type="text/javascript"
            src="jquery/bootstrap-datetimepicker-master/locale/bootstrap-datetimepicker.zh-CN.js"></script>
    <link rel="stylesheet" type="text/css" href="jquery/bs_pagination/jquery.bs_pagination.min.css">
    <script type="text/javascript" src="jquery/bs_pagination/jquery.bs_pagination.min.js"></script>
    <script type="text/javascript" src="jquery/bs_pagination/en.js"></script>


    <script type="text/javascript">

        $(function () {
            $("#create-but").click(function () {
                $("#createClueModal").modal("show");
            })

            $.ajax({
                url: "workbench/clue/getUsers.do",
                dataType: "json",
                type: "get",
                success: function (data) {
                    let html = "";
                    $.each(data, function (k, v) {
                        html += '<option value="' + v.id + '">' + v.name + '</option>';
                    })
                    $("#create-clueOwner").html(html);
                    $("#edit-clueOwner").html(html);
                    $("#create-clueOwner").val("${sessionScope.user.id}")
                }
            })

            $(".time").datetimepicker({
                minView: "month",
                language: 'zh-CN',
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayBtn: true,
                pickerPosition: "bottom-left"
            });

            selectAll("appellation");
            selectAll("clueState");
            selectAll("source");

            pageList(1, 5);

            $("#selectClue").click(function () {
                $("#old-fullname").val($.trim($("#show-fullname").val()));
                $("#old-owner").val($.trim($("#show-owner").val()));
                $("#old-phone").val($.trim($("#show-phone").val()));
                $("#old-mphone").val($.trim($("#show-mphone").val()));
                $("#old-source").val($.trim($("#show-source").val()));
                $("#old-state").val($.trim($("#show-state").val()));
                $("#old-company").val($.trim($("#show-company").val()));
                pageList(1, 5);
            })

            $("#save-clue").click(function () {
                $.ajax({
                    url: "workbench/clue/saveClue.do",
                    contentType: "application/x-www-form-urlencoded;charset=UTF-8",
                    dataType: "json",
                    type: "post",
                    data: {
                        "owner": $.trim($("#create-clueOwner").val()),
                        "company": $.trim($("#create-company").val()),
                        "fullname": $.trim($("#create-surname").val()),
                        "appellation": $.trim($("#create-appellation").val()),
                        "job": $.trim($("#create-job").val()),
                        "email": $.trim($("#create-email").val()),
                        "phone": $.trim($("#create-phone").val()),
                        "mphone": $.trim($("#create-mphone").val()),
                        "website": $.trim($("#create-website").val()),
                        "state": $.trim($("#create-clueState").val()),
                        "source": $.trim($("#create-source").val()),
                        "description": $.trim($("#create-describe").val()),
                        "contactSummary": $.trim($("#create-contactSummary").val()),
                        "nextContactTime": $.trim($("#create-nextContactTime").val()),
                        "address": $.trim($("#create-address").val())
                    },
                    success: function (data) {
                        if (data.success) {
                            $("#createClueModal").modal("hide");
                            pageList(1, 5)
                        } else {
                            alert("添加失败")
                        }
                    }
                })
            })


        });

        function selectAll(id) {
            $.ajax({
                url: "workbench/clue/getSelects.do?typeCode=" + id,
                dataType: "json",
                type: "get",
                success: function (data) {
                    let html = "<option></option>";
                    $.each(data, function (k, v) {
                        html += '<option value="' + v.value + '">' + v.text + '</option>';
                    })
                    $("." + id).html(html);
                }
            })

        }

        function pageList(pageCount, pageSize) {
            $("#show-fullname").val($.trim($("#old-fullname").val()));
            $("#show-owner").val($.trim($("#old-owner").val()));
            $("#show-phone").val($.trim($("#old-phone").val()));
            $("#show-mphone").val($.trim($("#old-mphone").val()));
            $("#show-source").val($.trim($("#old-source").val()));
            $("#show-state").val($.trim($("#old-state").val()));
            $("#show-company").val($.trim($("#old-company").val()));
            $.ajax({
                url: "workbench/clue/getClues.do",
                contentType: "application/x-www-form-urlencoded;charset=UTF-8",
                dataType: "json",
                type: "get",
                data: {
                    "fullname": $.trim($("#show-fullname").val()),
                    "company": $.trim($("#show-company").val()),
                    "phone": $.trim($("#show-phone").val()),
                    "mphone": $.trim($("#show-mphone").val()),
                    "source": $.trim($("#show-source").val()),
                    "owner": $.trim($("#show-owner").val()),
                    "state": $.trim($("#show-state").val()),
                    "pageCount": pageCount,
                    "pageSize": pageSize
                },
                success: function (data) {
                    let html = "";
                    $.each(data.pageList, function (k, v) {
                        html += '<tr>'
                        html += '<td><input type="checkbox" value="' + v.id + '" id="' + v.id + '"/></td> '
                        html += '<td><a style="text-decoration: none; cursor: pointer;" onclick="window.location.href=\'workbench/clue/clueDetail.do?id=' + v.id + '\'"'
                        html += '>' + v.fullname + v.appellation + '</a></td>'
                        html += '<td>' + v.company + '</td>'
                        html += '<td>' + v.phone + '</td>'
                        html += '<td>' + v.mphone + '</td>'
                        html += '<td>' + v.source + '</td>'
                        html += '<td>' + v.owner + '</td>'
                        html += '<td>' + v.state + '</td>'
                        html += '</tr>'
                    })
                    $("#showBody").html(html);
                    let totalPages = data.total % pageSize == 0 ? data.total / pageSize : parseInt(data.total / pageSize) + 1;
                    $("#showList").bs_pagination({
                        currentPage: pageCount, // 页码
                        rowsPerPage: pageSize, // 每页显示的记录条数
                        maxRowsPerPage: 20, // 每页最多显示的记录条数
                        totalPages: totalPages, // 总页数，需要计算
                        totalRows: data.total, // 总记录条数

                        visiblePageLinks: 3, // 显示几个卡片

                        showGoToPage: true,
                        showRowsPerPage: true,
                        showRowsInfo: true,
                        showRowsDefaultInfo: true,

                        onChangePage: function (event, data) {
                            pageList(data.currentPage, data.rowsPerPage);
                        }
                    });
                }
            })
        }

    </script>
</head>
